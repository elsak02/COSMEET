<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: 'form-input' } %>
    <%= f.input :password,
                required: false,
                input_html: { class: 'form-input'} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions d-flex justify-content-center">
    <%= f.button :submit, "Log in", class:"button mb-5" %>
  </div>
<% end %>

<%= link_to "Forgot your password?", new_password_path(resource_name), class:"link mt-3" %>
<br>
<span>Don't have an account yet? <%= link_to "Sign up!", new_registration_path(resource_name), class:"link mb-3" %></span>
