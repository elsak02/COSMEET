<% @users.each do |user| %>
  <div class="d-flex justify-content-center">
    <div class="row">
      <div class="col">
      <div class="card c">
        <div class="top-sec">
      <%= cl_image_tag user.photos.first.key %>
      </div>
      <div class="bottom-sec">
          <%= simple_form_for @like do |f|%>
            <%= f.input_field :receiver_id, class: "d-none", value: user.id %>
            <%= f.input_field :liked, class: "d-none" %>
            <%= f.submit %>
          <% end %>

          <h4><strong><%= user.name %></strong>, <%= user.age(user.birth_date) %></h4>
          <p><%= user.personality_trait %></p>
          <p><%= user.biography %></p>
        </div>
        </div>
        </div>
      </div>
    </div>
<% end %>
