<div class="py-4">
  <%= simple_form_for(current_user, url: profiles_preferences_path ) do |f| %>
    <%= f.input :name, label: 'Your name', required: true, input_html: { class: 'form-input'} %>
    <%= f.input  :gender, label: 'You identify yourself as a', collection: %w[Man Woman], as: :radio_buttons, required: true %>
    <%= f.input  :sexual_preference, label: 'You are looking for a', collection: %w[Man Woman Both], as: :radio_buttons, required: true %>
    <div class=" d-flex justify-content-center">
        <%= f.submit 'Continue', class:'button mt-4' %>
    </div>
  <% end %>
</div>
