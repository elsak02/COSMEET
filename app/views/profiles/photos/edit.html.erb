<h4 class="py-3 text-center">Boost your profile</h4>


<%= simple_form_for(current_user, url: profiles_photos_path ) do |f| %>
  <div class="photos-container flex-wrap justify-content-around">
      <div data-controller="img-preview">
        <%= f.input(:photos,
                    label: 'Add your best picture here',
                    label_html: {
                      class: 'photo-label mt-4',
                      data: { target: 'img-preview.preview '}
                    },
                    input_html: {
                      class: "d-none",
                      id: "user_photo_wall",
                      data: {
                        target: 'img-preview.photo',
                        action: 'change->img-preview#loadPreview'
                      },
                      multiple: true
                    },
                    required: true,
                    as: :file) %>
      </div>
  </div>
  <div class=" d-flex justify-content-center">
      <%= f.submit 'Continue', class:'button mt-3' %>
  </div>
<% end %>

