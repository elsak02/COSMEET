<%= simple_form_for(current_user, url: profiles_birth_infos_path ) do |f| %>
  <%= f.input(:birth_date,
              label: 'Your date of birth',
              label_html: { class: 'label'},
              input_html: { class: 'form-input'},
              as: :date,
              start_year: Date.today.year - 90,
              end_year: Date.today.year - 18,
              required: true) %>
  <%= f.input  :birth_time, label: 'Your time of birth', input_html: { class: 'form-input'}, collection: %w[male female], as: :time %>
  <%= f.input  :birth_place, label: 'Your place of birth', input_html: { class: 'form-input'} %>
  <%= f.submit 'Continue', class:'button' %>
<% end %>

<p>If you don't know your exact time of birth, please refer to your birth certificate.</p>
