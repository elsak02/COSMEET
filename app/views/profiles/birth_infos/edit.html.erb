<h4 class="py-4 text-center">Your personal information</h4>
  <%= simple_form_for(current_user, url: profiles_birth_infos_path ) do |f| %>
    <%= f.input(:birth_date,
                label: 'Your date of birth:',
                input_html: { class: 'form-input'},
                default: Date.parse('1990-01-01'),
                as: :date,
                start_year: Date.today.year - 90,
                end_year: Date.today.year - 18,
                required: true) %>

    <%= f.input(:birth_time,
                label: 'Your time of birth:',
                input_html: { class: 'form-input'},
                hint: ("If you don't know, please refer to your birth certificate"),
                required: true,
                collection: %w[male female],
                as: :time) %>
    <%= f.input(:birth_place,
                label: 'Your place of birth:',
                label_html: { class: 'mt-4'},
                required: true,
                input_html: { class: 'form-input'}) %>

    <div class=" d-flex justify-content-center">
      <button id="submitFormBirth" class="button mt-4" type="button" data-toggle="modal", data-target="#modalInfos" >Continue</button>
    </div>
    <div class="modal fade" id="modalInfos" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Mes Infos</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <ul id="infosBirthUser"></ul>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <%= f.submit 'Submit', class:'button mt-4' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

